<UserControl
	x:Class="WpfHousePassiveClient.Views.DownstairsBathroomView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfHousePassiveClient.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:WpfHousePassiveClient.ViewModels"
	Width="150"
	Height="150"
	MaxWidth="150"
	MaxHeight="150"
	d:DataContext="{d:DesignInstance vm:DownstairsBathroomViewModel,
	                                 IsDesignTimeCreatable=True}"
	d:DesignHeight="150"
	d:DesignWidth="150"
	mc:Ignorable="d">
	<Grid ClipToBounds="True">
		<Rectangle
			x:Name="RoomDark"
			d:IsLocked="True"
			Fill="{StaticResource RoomDarkBrush}" />
		<TextBlock
			x:Name="Legend"
			Margin="0,54,0,0"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			FontSize="32"
			Foreground="White"
			Text="Bathroom"
			TextWrapping="Wrap" />
		<Rectangle
			x:Name="RoomLight"
			d:IsHidden="True"
			d:IsLocked="True"
			Fill="{StaticResource RoomLightBrush}"
			Visibility="{Binding IsRoomLighten}" />
		<Ellipse
			x:Name="VanityLight1"
			Width="35"
			Height="35"
			Margin="24,8,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Fill="{Binding VanityLight.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="VanityLight2"
			Width="35"
			Height="35"
			Margin="0,8,24,12"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Fill="{Binding VanityLight.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="WallLightGlow"
			Width="240"
			Height="220"
			Margin="0,-75,0,0"
			HorizontalAlignment="Center"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding VanityLight.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding VanityLight.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Rectangle
			x:Name="Desk"
			Width="150"
			Height="49"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Style="{StaticResource Furniture}" />

	</Grid>
</UserControl>
